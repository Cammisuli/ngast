{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist-test",
    "lib": ["es2015", "dom"]
  },
  "files": [
    "test/symbol.spec.ts",
    "test/project-symbols.spec.ts",
    "test/directive-symbol.spec.ts",
    "test/module-symbol.spec.ts",
    "test/pipe-symbol.spec.ts",
    "test/provider-symbol.spec.ts",
    "test/dep-parsing.spec.ts",
  ],
  "include": ["test/ngtsc/*.spec.ts"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "enableIvy": true
  }
}
